{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Location of Bushfires in Australia (2019)",
    "projection": {"type": ""},
    "layer": [
        {
            "data": { "url": "ne_110m_admin_0_countries.json", 
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "", "stroke": "gray"}
        },
        {
            "data": {
                "url": "../data/fire_archive_M6_101673.csv"
            },
            "mark": {"type": "circle"},
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
            "color": {
                "field": "brightness",
                "type": "quantitative",
                "title": "Temperature (Kelvin)",
                "scale": {"scheme": "reds"}
                },
            "tooltip": [
                {"field": "brightness", "type": "quantitative", "title": "Temperature (K)"},
                {"field": "acq_date", "type": "temporal", "title": "Date"}
            ]
            }
        }
    ]
}